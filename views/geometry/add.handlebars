<div class="card card-body">
  <h3>Add Geometry Fields</h3>
  <form action="/geometry" method="post">
    <div class="form-group">
      <label for="num">Num</label>
      <input type="text" class="form-control" name="num" required>
    </div>
    <div class="form-group">
      <label for="field0">Field0</label>
      <textarea class="form-control" name="field0" required></textarea>
    </div>
    <div class="form-group">
      <label for="field1">Field0</label>
      <textarea class="form-control" name="field1" required></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>