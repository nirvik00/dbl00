<h5 id="ini">Geometry</h5>
{{#each geometry}}
<div class="card card-body">
  <div class="alert alert-danger">{{num}}</div>
  <p>{{field0}}</p>
  <a class="btn btn-dark mb-2" href="/geometry/show/{{id}}"> Show</a>
  </div>
  {{else}}
{{/each}} 


<script>
  var k=0;
  {{#each geometry}}
    k+=1;
  {{/each}}
  console.log('there are '+k+'geometries');
  document.getElementById("ini").innerHTML='Please select from one of '+k+' models';
</script>